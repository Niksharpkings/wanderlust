<div class="hero is-primary ">
  <h1 class="title has-text-centered is-size-1">Log-In / Sign-Up Form</h1>
</div>
<form class="login-form">
  <div class="content">
    <div class="input-field">
      <label class="label is-large is-pulled-left" for="signin">Sign-In:</label>
      <input class="input has-background-primary-light" type="text" name="title" placeholder="+ Your Email"
        id="email-login" />
    </div>
    <div class="input-field">
      <input class="input has-background-primary-light" type="password" placeholder="+ Password" id="password-login">
    </div>
    <div>
      <button class="button-59" type="submit">Login</button>
    </div>
</form>

<form class="signup-form">
  {{!-- <div class="content"> --}}

    <div class="input-field">
      <label class="label is-large is-pulled-left" for="signup">Sign-Up:</label>
      <input class="input has-background-primary-light" type="text" placeholder="+ Username" id="username-signup" />
    </div>
    <div class="input-field">
      <input class="input has-background-primary-light" type="text" placeholder="+ Email" id="email-signup" />
    </div>
    <div class="input-field">
      <input class="input has-background-primary-light" type="password" placeholder="+ Password" id="password-signup" />
    </div>
    <div>
      <button type="submit" class="button-59">Signup</button>
    </div>
  </div>
</form>
</div>

<script src="/javascript/login.js"></script>